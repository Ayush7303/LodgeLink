@model LodgeLink.Models.Property

@{
    ViewData["Title"] = "Create Property";
}

<hr />
<div class="card-body">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
            <div class="form-group">
                <label asp-for="PeopertyNumber" class="control-label"></label>
                <input asp-for="PeopertyNumber" class="form-control" />
                <span asp-validation-for="PeopertyNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyType" class="control-label"></label>
                <div class="row">
                    <div class="col-md-4">
                            <div class="form-check">
                                <input type="radio" class="form-check-input" id="PropertyType" name="PropertyType" value="Residential" checked>Residential
                            </div>
                    </div>
                    <div class="col-md-4">
                            <div class="form-check">
                                <input type="radio" class="form-check-input" id="PropertyType" name="PropertyType" value="Commercial">Commercial
                            </div>
                    </div>
                </div>
                  
                   
                <span asp-validation-for="PropertyType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertySize" class="control-label"></label>
                <input asp-for="PropertySize" class="form-control" />
                <span asp-validation-for="PropertySize" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="PropertyStatus" class="control-label"></label>
                <input asp-for="PropertyStatus" class="form-control" />
                <span asp-validation-for="PropertyStatus" class="text-danger"></span>
            </div>
            
            
            </div>
            <div class="col-md-6">
            <div class="form-group">
                <label asp-for="PropertyValue" class="control-label"></label>
                <input asp-for="PropertyValue" class="form-control" />
                <span asp-validation-for="PropertyValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyFeatures" class="control-label"></label>
                <input asp-for="PropertyFeatures" class="form-control" />
                <span asp-validation-for="PropertyFeatures" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuildingId" class="control-label"></label>
                <select asp-for="BuildingId" class ="form-control" asp-items="ViewBag.BuildingId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
                <div class="form-group">

                    <input type="submit" value="Create" class="btn btn-block btn-primary" />
                </div>
            </div>
        </div>
    </form>

</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
