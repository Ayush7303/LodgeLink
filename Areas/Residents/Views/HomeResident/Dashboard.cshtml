@model dynamic
@{
    ViewData["Title"] = "Dashboard";
    var visitorList = ViewData["VisitorList"] as List<Visitor>;
    var eventList = ViewData["EventParticipant"] as List<Event>;
    var pendingBills = ViewData["PendingBills"] as List<BillsPayment>;
    var archReq = ViewData["ArchRequest"] as List<ArchitecturalRequest>;
    var mainReq = ViewData["MainRequest"] as List<MaintenanceRequest>;
    var facbooking = ViewData["FacBooking"] as List<BookingRequest>;
}

<div class="container-fluid my-3 text-primary">
    <div class="row mb-3">
        <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">House No.</p>
                                <h5 class="font-weight-bolder text-success font-weight-bolder mb-0">
                                    @ViewBag.PropertyNumber
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                                <i class="ni ni-building text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Type</p>
                                <h5 class="font-weight-bolder text-success font-weight-bolder mb-0">
                                    @ViewBag.PropertyType
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                                <i class="ni ni-tag text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Block</p>
                                <h5 class="font-weight-bolder text-success font-weight-bolder mb-0">
                                    @ViewBag.BuildingName
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                                <i class="ni ni-istanbul text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row my-4">
        <div class="col-lg-6 col-md-6 mb-md-0 mb-4">
            <div class="card h-100">
                <div class="card-header pb-0">
                    <div class="row">
                        <div class="col-lg-6 col-7">
                            <h6>Your Upcoming Events</h6>
                            <p class="text-sm mb-0">
                                <i class="fa fa-check text-info" aria-hidden="true"></i>
                                <span class="font-weight-bold ms-1">@ViewBag.EventCount Participated Event</span>
                            </p>
                        </div>
                        <div class="col-lg-6 text-end">
                            <a class="btn btn-outline-primary btn-sm mb-0" href="@Url.Action("Index", "EventBooking")">Participate</a>
                        </div>
                    </div>
                </div>
                <div class="card-body p-3 pb-0">
                    <ul class="list-group">
                        @foreach (var item in eventList)
                        {
                            if (item.Start >= DateTime.Now)
                            {
                                <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                                    <div class="d-flex flex-column">
                                        <h6 class="mb-1 text-dark font-weight-bold text-sm">@item.Subject</h6>
                                        <span class="text-xs">@item.Description</span>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <h6 class="mb-1 text-dark font-weight-bold text-sm">@item.Start</h6>
                                       
                                    </div>
                                    @if(item.End==null)
                                    {
                                    <div class="d-flex align-items-center">
                                        <h6 class="mb-1 text-dark font-weight-bold text-sm">Full Day Event</h6>

                                    </div>
                                    }
                                    else{
                                    <div class="d-flex align-items-center">
                                        <h6 class="mb-1 text-dark font-weight-bold text-sm">@item.End</h6>

                                    </div>
                                    }
                                    <div class="d-flex align-items-center text-sm">
                                        @item.Fees
                                       
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 mb-md-0 mb-4">
            <div class="card h-100">
                <div class="card-header pb-0">
                    <div class="row">
                        <div class="col-lg-6 col-7">
                            <h6>Guests</h6>
                            <p class="text-sm mb-0">
                                <i class="fa fa-check text-info" aria-hidden="true"></i>
                                <span class="font-weight-bold ms-1">@ViewBag.VisitorCount Visited</span> this month
                            </p>
                        </div>

                    </div>
                </div>
                <div class="card-body p-3">
                    <ul class="list-group">
                        @foreach (var item in visitorList)
                        {
                            <li class="list-group-item border-0 d-flex align-items-center px-0 mb-2">
                                <div class="avatar me-3">
                                    <img src="@item.ImageURL" alt="Profile" class="border-radius-lg shadow">
                                </div>
                                <div class="d-flex align-items-start flex-column justify-content-center">
                                    <h6 class="mb-0 text-sm">@item.VisitorName</h6>
                                    <p class="mb-0 text-xs">@item.ContactNumber</p>
                                </div>
                                <a class="btn btn-link pe-3 ps-0 mb-0 ms-auto" href="javascript:;">@item.CheckInTime</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
       
    </div>
    <div class="row my-4">

        <div class="col-lg-6 col-md-6 mb-md-0 mb-4">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="row">
                        <div class="col-lg-6 col-7">
                            <h6>Bills</h6>
                            <p class="text-sm mb-0">
                                <i class="fa fa-check text-info" aria-hidden="true"></i>
                                <span class="font-weight-bold ms-1"> Pending Bills</span>
                            </p>
                        </div>

                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Title</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Due Date</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in pendingBills)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.Bill.Title</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <h6 class="mb-1 text-dark font-weight-bold text-sm">@item.Bill.DueDate</h6>
                                            </div>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <div class="d-flex align-items-center text-sm">
                                                @item.PaidAmount
                                                <a class="btn btn-link text-dark text-sm mb-0 px-0 ms-4" href="@Url.Action("Index", "BillsResident")"><i class="ni ni-curved-next text-lg me-1"></i> Pay</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 mb-md-0 mb-4">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="row">
                        <div class="col-lg-6 col-7">
                            <h6>Facilities</h6>
                            <p class="text-sm mb-0">
                                <i class="fa fa-check text-info" aria-hidden="true"></i>
                                <span class="font-weight-bold ms-1">@ViewBag.FacBookingCount Booked</span>
                            </p>
                        </div>

                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Facility Name</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Start Date</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">End Date</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in facbooking)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.Facility.FacilityName</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <h6 class="mb-1 text-dark font-weight-bold text-sm">@item.StartDate</h6>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <h6 class="mb-1 text-dark font-weight-bold text-sm">@item.EndDate</h6>
                                            </div>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <div class="d-flex align-items-center text-sm">
                                                @item.Status
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row my-4">
        <div class="card">
            <div class="card-header pb-0">
                <div class="row">
                    <div class="col-lg-6 col-7">
                        <h6>Track Maintenance Request</h6>
                        <p class="text-sm mb-0">
                            <i class="fa fa-check text-info" aria-hidden="true"></i>
                        <span class="font-weight-bold ms-1">@ViewBag.MainRequestCount  Requested</span>
                        </p>
                    </div>

                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Description</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Request Date</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Status</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Complation Date</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Assigned To</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in mainReq)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@item.Description</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <h6 class="mb-1 text-dark font-weight-bold text-sm">@item.RequestDate</h6>
                                        </div>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        <div class="d-flex align-items-center text-sm">
                                            @item.Status

                                        </div>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        <div class="d-flex align-items-center text-sm">
                                            @item.CompletionDate

                                        </div>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        <div class="d-flex align-items-center text-sm">
                                            @(item.User?.UserName ?? "N/A")

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        </div>
    <div class="row my-4">

    <div class="card">
        <div class="card-header pb-0">
            <div class="row">
                <div class="col-lg-6 col-7">
                    <h6>Track Architectural Request</h6>
                    <p class="text-sm mb-0">
                        <i class="fa fa-check text-info" aria-hidden="true"></i>
                        <span class="font-weight-bold ms-1">@ViewBag.archReqCount  Requested</span>
                    </p>
                </div>

            </div>
        </div>
        <div class="card-body px-0 pb-2">
            <div class="table-responsive">
                <table class="table align-items-center mb-0">
                    <thead>
                        <tr>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Description</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Request Date</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Status</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Approval Date</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Approved By</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in archReq)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex px-2 py-1">
                                        <div class="d-flex flex-column justify-content-center">
                                            <h6 class="mb-0 text-sm">@item.Description</h6>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <h6 class="mb-1 text-dark font-weight-bold text-sm">@item.RequestDate</h6>
                                    </div>
                                </td>
                                <td class="align-middle text-center text-sm">
                                    <div class="d-flex align-items-center text-sm">
                                        @item.Status

                                    </div>
                                </td>
                                <td class="align-middle text-center text-sm">
                                    <div class="d-flex align-items-center text-sm">
                                        @item.ApprovalDate

                                    </div>
                                </td>
                                <td class="align-middle text-center text-sm">
                                    <div class="d-flex align-items-center text-sm">
                                        @(item.User?.UserName ?? "N/A")

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    </div>

</div>
